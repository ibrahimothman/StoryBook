

    <%- include('./partials/_header') -%>
    <%- include('./partials/_add_btn') -%>
    <div class="container">
        <h6>Dashboard</h6>
        <h3>Welcome <%= name %></h3>
        <p>Here you can see your stories</p>

        <% if (stories.length > 0){ %>
            
            <table class="striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>status</th>
                        <th></th>
                    </tr>
                        
                </thead>
                <tbody>
                    <% stories.forEach((story, index) => { %>
                        <tr>
                            <td><a href="/stories/<%= story._id %>"><%= story.title %></a></td>
                            <td><%= dateFormat(story.createAt, 'MMMM Do YYYY, h:mm:ss a') %></td>
                            <td><%= story.status %></td>
                            <td></td>
                        </tr>
                    <%})%>
                <tbody>

                </table>
            
        <%}else{%>
            <p>You don't have stories yet</p>
        <%}%>
        
    </div>

    <%- include('./partials/_footer') -%>

 

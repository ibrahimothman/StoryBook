<%- include('../partials/_header') -%>
<div class="container">
    <div class="row">
        <div class="col s12 m8">
            <h3><%= story.title %>
                <% if (story.user._id.toString() === loggedUser.id.toString() ){ %>
                    <small><a href="/stories/<%= story._id %>/edit"><i class="fas fa-edit"></i></a></small>
                <%}%>
            </h3>
                
            <div class="card story">
                <div class="card-content">
                    <span class="card-title">
                        <% formatDate(story.createAt)  %>
                    </span>
                    <%= stripeTags(story.body) %>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="card center-align">
                <div class="card-content">
                    <span class="card-title"></span>
                    <img src="<%= story.user.image %>" class="circle responsive-img img-small" alt="profile img">
                </div>
                <div class="card-action">
                    <a href="/stories/user/<%= story.user._id %>">More From <%= story.user.displayName %></a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/_footer') -%>

